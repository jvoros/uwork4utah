@import "imports/normalize.styl"
@import "imports/colors"
@import "imports/grid"
@import "imports/base"
@import "imports/typography"
@import "imports/links"
@import "imports/buttons"
@import "imports/forms"
@import "imports/lists"
@import "imports/code"
@import "imports/tables"
@import "imports/spacing"
@import "imports/floats-positioning"
@import "imports/nav"
@import "imports/utilities"
@import "imports/misc"
// @import "mediaqueries" use to copy media queries where needed.

lightblue = rgb(247, 250, 255)
blue = rgb(48, 129, 180)
navy = rgb(29, 41, 53)
red = #CC3333

body
  background-color: navy
  min-height: 100%
  text-align: center

.whitebar
  background-color: white
  padding: 2rem

.navybar
  padding: 2rem

.lightbar
  background-color: lightblue
  padding: 2rem
  color: navy

.redbar
  padding: 2rem
  background-color: red
  color: white

  p 
    a
      color: navy

  a.button
    font-family: font-stack-sans
    border: 0
    background-color: white
    color: navy

  a.button:hover
    background-color: lightblue

.image-fill
  width: 90%
  margin: 0 auto

nav
  background-color: navy
  padding: 2rem 1rem
  font-family: font-stack-sans
  text-align: right

  ul
    margin-top: 1rem
    margin-bottom: 0
    display: none
    text-align: center

  ul.show
    display: block

  a
    color: white
    text-decoration: none
    text-transform: uppercase
    
    &:hover
      color: lightblue

#chaff-vid
  width: 320px
  height: 250px
  margin: 0
  padding: 0

#hero
  background-color: lightblue
  padding: 1rem
  text-align: center

  img
    width: 80%

  p
    font-weight: 700
    font-size: 1.6rem
    line-height: 2rem
    padding: 1rem
    margin-bottom: 1rem
    text-align: center

.mission-statement
  text-align: center
  font-family: font-stack-serif
  font-style: italic
  font-size: 2rem
  line-height: 3rem
  color: navy
  padding: 2rem

.firstaction
  img
    width: 100%
  p
    text-align: left

.sociallinks
  li
    display: inline
    padding: 0 2rem

input[type="submit"].button-primary
  background-color: blue
  border: 0

  &:hover
    background-color: lighten(blue, 8)

#signup
  background-color: navy
  padding: 4rem
  color: white

#mce-EMAIL
  width: 80%


@media (min-width: 720px)

  #hamburger
    display: none
  
  nav
    overflow: hidden

    ul
      display: block
      float: right
      overflow: hidden
            
    li
      float: left
      margin-right: 1rem

  #hero
    padding: 5rem 0

    .column
      padding: 1rem

    p
      margin-top: 1rem
      font-size: 3rem
      line-height: 4rem

  #mce-EMAIL
    width: 50%

  #chaff-vid
    width: 560px
    height: 315px
